<% layout("/layouts/boilerplate.ejs") -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form
      method="post"
      action="/listings/<%= listing._id %>?_method=put"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          id="title"
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          type="text"
          class="form-control"
          required
        >
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">Description is required</div>
      </div>

      <div class="mb-3">
        <p><b>Original Listing Image</b></p>
        <img
          src="<%= originalImageUrl %>"
          alt="Old Listing Image"
          class="h-25 w-25"
        />
      </div>

      <div class="mb-3">
        <label for="image" class="form-lable">Upload New Image </label>
        <input
          id="image"
          name="listing[image]"
          type="file"
          class="form-control"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input
            id="price"
            name="listing[price]"
            value="<%= listing.price %>"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price is Required</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country</label>
          <input
            id="country"
            name="listing[country]"
            value="<%= listing.country %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country Must be valid</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          id="location"
          name="listing[location]"
          value="<%= listing.location %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location must be valid</div>
      </div>
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>
