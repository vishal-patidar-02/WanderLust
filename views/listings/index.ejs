<% layout("/layouts/boilerplate.ejs") -%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 0.5rem;
    height: 100px;
  }

  .swiper {
    width: 75%;
  }

  .swiper-slide {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    width: auto;
    opacity: 0.7;
    flex-shrink: 0;
  }

  .swiper-slide:hover {
    opacity: 1;
    cursor: pointer;
  }
  .swiper-slide p {
    font-size: 0.8rem;
  }

  .swiper-wrapper {
    top: -1rem;
    width: 100%;
    height: 4rem;
    display: flex;
    flex-wrap: nowrap;
  }

  .swiper-pagination {
    position: relative;
    margin-top: 0.3rem;
    text-align: center;
  }

  .swiper-button-next {
    right: 15px;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    margin-right: 1rem;
    margin-bottom: 0.8rem;
    padding: 0.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
  }

  .category-icon {
    text-decoration: none !important;
    color: black;
  }

  @media (min-width: 200px) and (max-width: 537px) {
    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      font-size: 68%;
      margin-bottom: 0.8rem;
      padding: 0.5rem;
      height: 2.5rem;
      display: flex;
      align-items: center;
    }
    .swiper {
      width: 70%;
    }
  }
</style>

<div id="filters">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Trending">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Rooms">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Cities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Cities</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a  class="category-icon" href="/listings/category?category=Mountains">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Castles">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Pools">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Pools</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Camping">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Farms">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Arctic">
          <div><i class="fa-regular fa-snowflake"></i></div>
          <p>Arctic</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Forest">
          <div><i class="fa-solid fa-tree"></i></div>
          <p>Forest</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Ship">
          <div><i class="fa-solid fa-ship"></i></div>
          <p>Ship</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Home">
          <div><i class="fa-solid fa-house"></i></div>
          <p>Home</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Igloo">
          <div><i class="fa-solid fa-igloo"></i></div>
          <p>Igloo</p>
        </a>
      </div>
      <div class="swiper-slide">
        <a class="category-icon" href="/listings/category?category=Cinematic">
          <div><i class="fa-solid fa-film"></i></div>
          <p>Cinematic</p>
        </a>
      </div>
    </div>
    <div class="swiper-pagination"></div>
  </div>

  <div class="tax-toggle ms-auto">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault">Taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg row-cols-md-3 row-cols-sm-2 row-cols-esm-1 mt-3">
  <% if(!allListings.length){ %>
  <img
    class="col-lg-6 offset-lg-3 offset-sm-2 col-sm-8 offset col-12"
    src="https://res.cloudinary.com/ddml73nwc/image/upload/v1733723885/WanderLust_DEV/empty.59d15b3c_nnnfct.gif"
    alt="Listing_NotFound"
  />
  <% } %> <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="Listing_image"
        style="height: 18rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script src="/js/swiper.js"></script>
