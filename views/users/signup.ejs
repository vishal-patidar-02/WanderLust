<% layout("/layouts/boilerplate.ejs") -%>

<div class="row mt-3">
  <h2 class="col-lg-6 offset-lg-3 offset-sm-2 col-sm-8 offset col-12">SignUp on wanderLust</h2>
  <div class="col-lg-6 offset-lg-3 offset-sm-2 col-sm-8 offset col-12">
    <form method="POST" action="/users/signup" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-lable">Usernmae</label>
        <input
          id="username"
          name="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-lable">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-lable">password</label>
        <input
          id="password"
          name="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
